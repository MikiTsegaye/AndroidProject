<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginActivity">

    <activity
        android:id="@+id/loginActivity"
        android:name="com.example.gamermatch.LoginActivity"
        android:label="Login"
        tools:layout="@layout/activity_login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerActivity" />
        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/mainActivity" />
    </activity>

    <activity
        android:id="@+id/registerActivity"
        android:name="com.example.gamermatch.RegisterActivity"
        android:label="Register"
        tools:layout="@layout/activity_register" />

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.gamermatch.MainActivity"
        android:label="Home"
        tools:layout="@layout/activity_main"/>

    <activity
        android:id="@+id/editProfileActivity"
        android:name="com.example.gamermatch.EditProfileActivity"
        android:label="Edit Profile"
        tools:layout="@layout/activity_edit_profile" />

</navigation>